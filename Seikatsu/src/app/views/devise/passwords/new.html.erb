<% @page_title = "パスワードをお忘れですか？" %>

<%= render "devise/shared/error_messages", resource: resource %>

<section class="devise-form tile">
  <h1 class="devise-form__title">パスワードをお忘れですか？</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレスを入力" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードリセットのメールを送る", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>