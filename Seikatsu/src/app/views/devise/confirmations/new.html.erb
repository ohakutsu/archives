<% @page_title = "確認のメールが届いていませんか？" %>

<%= render "devise/shared/error_messages", resource: resource %>

<section class="devise-form tile">
  <h1 class="devise-form__title">確認のメールが届いていませんか？</h1>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control", placeholder: "メールアドレスを入力" %>
    </div>

    <div class="actions">
      <%= f.submit "もう一度メールを送る", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>